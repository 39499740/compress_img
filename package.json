{
  "name": "compress_img",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "build:win": "vue-tsc && vite build && electron-builder --win --x64",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron-store": "^10.0.1",
    "jimp": "^1.6.0",
    "sharp": "^0.33.5",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.26"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.electron.compressimg",
    "productName": "图片压缩工具",
    "copyright": "Copyright © 2025",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/electron-vite.svg",
      "artifactName": "${productName}-便携版.${ext}"
    },
    "portable": {
      "unicode": false,
      "artifactName": "${productName}-便携版.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asar": true
  }
}
